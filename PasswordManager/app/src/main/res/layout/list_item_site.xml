<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="site"
            type="es.uam.eps.sasi.passwordmanager.Site"/>
    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/site_widget"
        style="@style/Widget.MaterialComponents.CardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/mtrl_card_spacing"
        android:layout_marginTop="@dimen/mtrl_card_spacing"
        android:layout_marginRight="@dimen/mtrl_card_spacing"
        app:cardBackgroundColor="@color/cardview_light_background">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="3dp"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/list_site_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/rounded_corner"
                android:padding="5dp"
                android:text="@{site.name}"
                android:textColor="@color/white"
                android:textSize="14sp">
            </TextView>

            <TextView
                android:id="@+id/list_site_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_below="@id/list_site_name"
                android:layout_marginBottom="5dp"
                android:text="@{site.siteUser}"
                android:textSize="14sp">
            </TextView>

            <TextView
                android:id="@+id/list_site_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_below="@id/list_site_user"
                android:text="********"
                android:textSize="18sp">
            </TextView>

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>