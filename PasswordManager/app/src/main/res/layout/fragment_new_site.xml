<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/login_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_light_grey">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="150dp">

            <TextView
                android:id="@+id/site_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/site_name_text"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_gravity="center"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="330dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/white">

                <EditText
                    android:id="@+id/site_text_input"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/blood_red"
                    android:textCursorDrawable="@null"
                    android:hint="@string/site_name_text_hint">
                </EditText>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/site_password_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:text="@string/site_password_text"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_gravity="center"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="330dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/white">

                <EditText
                    android:id="@+id/site_password_text_input"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textPassword"
                    android:backgroundTint="@color/blood_red"
                    android:textCursorDrawable="@null"
                    android:hint="@string/site_password_text_hint">
                </EditText>
            </com.google.android.material.card.MaterialCardView>

            <RadioButton
                android:id="@+id/expense_radio_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="15dp"
                android:paddingEnd="30dp"
                android:buttonTint="@color/blue"
                android:text="@string/autogenerate_text"
                tools:ignore="RtlSymmetry">
            </RadioButton>

            <Button
                android:id="@+id/add_site_button"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/white"
                android:text="@string/add_site_button_text"
                android:textColor="@color/blood_red"
                android:textAllCaps="false">
            </Button>
        </LinearLayout>

    </RelativeLayout>

</layout>